@model PROJECTS.Models.Bug

@{
    ViewData["Title"] = "Create Bug";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm" style="background-color: #e6f2ff;">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">&#128030 Report a New Bug</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Severity" class="form-label"></label>
                            <input asp-for="Severity" class="form-control" />
                            <span asp-validation-for="Severity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Assignee" class="form-label"></label>
                            <input asp-for="Assignee" class="form-control" />
                            <span asp-validation-for="Assignee" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportedDate" class="form-label"></label>
                            <input asp-for="ReportedDate" class="form-control" />
                            <span asp-validation-for="ReportedDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">&#11013 Back to List</a>
                            <button type="submit" class="btn btn-primary">&#128190 Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}